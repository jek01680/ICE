<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mybatis.mapper.oracle.workrecord">
	<insert id="insertWork" parameterType="WorkRecordVO">
		<selectKey keyProperty="cmtNo" resultType="int" order="BEFORE">
			select workRecord_seq.nextval from dual
		</selectKey>
		insert into workRecord(cmt_no,memNo,cmp_status,cmp_in)
		values(#{cmtNo},#{memNo},#{cmpStatus},#{cmpIn})
	</insert>
	
	<select id="selectWorkList" resultType="WorkRecordVO" parameterType="int">
		select * from workRecord where memno=#{memNo}
	</select>
	
	<update id="updateWork" parameterType="WorkRecordVO">
		update workRecord set cmp_out=#{cmpOut}
		where cmt_no=#{cmtNo}
	</update>
</mapper>









